name: License Compliance Check

on: [push, pull_request]

jobs:
  license-scan:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Scan for forbidden license text
        run: |
          if grep -F -r -e "MIT License" -e "Permission is hereby granted" . ; then
            echo "::error file=LICENSE::Forbidden license text found! Only LFAS Protocol v4 License is allowed."
            exit 1
          else
            echo "License check passed. Only LFAS Protocol v4 License detected."
          fi
